doctype html
html
  head
    link(rel="icon" href="/assets/images/index/logo.svg" type="image/x-icon")
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{pageTitle}
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")
    link(rel="stylesheet" href="/assets/css/style.css")

    //- link(rel="stylesheet", href="https://cdn.judelivr.net/npm/bootstrap4.2/dist/css/bootstrap.min.css")
  body
    
    //- Header
    header.header
      .container
        .header__wrap
          //- Menu Mobile
          button.header__menu-mobile
            i(class="fa-solid fa-bars")

          //- Logo
          .header__logo
            a(href="/")
              img(src="assets/images/index/logo.svg" alt="Monito")

          //- Menu
          nav.header__menu
            ul
              li
                a(href="/") Home
              li
                a(href="/product") Books
              li
                a(href="#") Trending
              li
                a(href="#") About Us

          //- Search
          button.header__search-mobile
            i(class="fa-solid fa-magnifying-glass")
          form(action="#" class="header__form" id = "form-search")
            input(name="keyword" placeholder="Try something..." type = "text" class = "form-control" value = keyword)
            button
              i(class="fa-solid fa-magnifying-glass")

          //- Button
          nav(class = "buttons")
            a(href="#" class="button") Login
    //- End Header

    //- Main
    block main
    //- End Main

    //- Footer
    footer.footer
      .container
        .footer__top
          .footer__content Đăng ký ngay để không bỏ lỡ các chương trình của chúng tôi
          form(action="" class="footer__form")
            input(type="email" name="" placeholder="Nhập email của bạn...")
            button Đăng Ký Ngay
        .footer__middle
          nav.footer__middle-links
            ul
              li
                a(href="#") Trang Chủ
              li
                a(href="#") Danh Mục
              li
                a(href="#") Giới Thiệu
              li
                a(href="#") Liên Hệ
          nav.footer__socials
            ul
              li
                a(href="#" target="_blank")
                  i(class="fa-brands fa-facebook")
              li
                a(href="#" target="_blank")
                  i(class="fa-brands fa-x-twitter")
              li
                a(href="#" target="_blank")
                  i(class="fa-brands fa-instagram")
              li
                a(href="#" target="_blank")
                  i(class="fa-brands fa-youtube")
        .footer__bottom
          .footer__copyright © 2024 TTMT. All rights reserved.
          .footer__logo
            a(href="index.html")
              img(src="assets/images/index/logo.svg" alt="")
          nav.footer__bottom-links
            ul
              li
                a(href="#") Điều khoản dịch vụ
              li
                a(href="#") Chính sách bảo mật
    //- End Footer
    script(src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js")
    script(src="/assets/js/script.js" type="module") 

    //- script(src="https://cdn.jsdelivr.net/npm/jquery@3. jquery.slim.min.js") 
    //- script(src="https://cdn.jsdelivr.net/npm/bootstrap bootstrap.bundle.min.js")